.usermotto {
  font-size: 400%;
  font-family:'Courier New', Courier, monospace
}

button::after{ 
	border: none; 
}

button {
    border-radius: 30px;
}

.configure {
  display: flex;
  flex-direction: row;
}

.buttonArea {
  display: flex;
  flex-direction: row;
  /* align-items: center; */
  justify-content: space-around;
}

.colorArea {
  display: flex;
  /* align-items: center; */
  /* align-content: center; */
  justify-content: center;
}

.userinfo {
  margin-top: 40px;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 140rpx 0;
  box-sizing: border-box;
} 

.bottom {
  position:fixed; bottom:0;
}

.red {
  background:red; 
  color:#FFF;
  position:absolute;
  min-height:100%;
  width:100%;
}

.yellow {
  background: Gold;
  color:#FFF;
  position:absolute;
  min-height:100%;
  width:100%;
}

.green {
  background:OliveDrab;
  color:#FFF;
  position:absolute;
  min-height:100%;
  width:100%;
}

.white {
  background:#FFF;
  color:black;
  position:absolute;
  min-height:100%;
  width:100%;
}