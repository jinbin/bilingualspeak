/**app.wxss**/

@import 'styles/weui.wxss';

.page__hd {
    padding: 20px;
}

.page__title {
    text-align: left;
    font-size: 18px;
    font-weight: 400;
    position:relative;
}

.page__desc {
    margin-top: 5px;
    color: #888888;
    text-align: left;
    font-size: 14px;
    position:relative;
}

.page__collect {
    width: 20px;
    height: 20px;
}

page{
    height: 100%;
    background-color: #F8F8F8;
    font-size: 16px;
    font-family: -apple-system-font,Helvetica Neue,Helvetica,sans-serif;
}

.page-body {
  padding: 20rpx 0;
}

.pageItem{
    margin-top: 5px;
    text-align: center;
    font-size: 14px;
    word-break:break-all;
}

.line{
    width: 100%;
    height: 2rpx;
    background: #aaa;
}

.middle__desc {
    margin-top: 5px;
    color: green;
    text-align: center;
    font-size: 14px;
}

.titleItem {
    margin-top: 5px;
    text-align: center;
    font-size: 14px;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 

.userinfo-section {
  display: flex;
  flex-direction: row-reverse;
  align-items: right;
}

.userinfo-avatar {
  width: 40rpx;
  height: 40rpx;
  margin: 10rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.summary__title {
    text-align: center;
    font-size: 20px;
    font-weight: 400;
}

.contact_view {
  background-color: #C6E2FF;
  width: 30px;
  height: 30px;
  text-align: center;
  align-items: center;
  padding-top: 10px;
  border-radius: 20px;
  line-height: 42px;
  padding: 2px;
}

.button-sp-area{
    margin: 0 auto;
    padding-top: 15px;
    width: 60%;
    
}
.mini-btn{
    margin-right: 5px;
}

.tc{
  text-align: center;
}

input {
  font-family: "PingFang-SC-Regular","SimSun","Microsoft Yahei";
}
