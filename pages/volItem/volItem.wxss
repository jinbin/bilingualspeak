.container {
  height: 50%;
  border-top: 1px solid #ebebeb;
  border-bottom: 1px solid #ebebeb;
  box-sizing: border-box;
} 

.vol-swiper {
  height: 90%;
}

.vol-swiper-item {
  padding: 25rpx;
  box-sizing: border-box;
  overflow: scroll;
}

.vol-card {
  padding: 20rpx;
  border: 1px solid #ebebeb;
  border-radius: 3px;
  box-shadow: 1px 1px 1px #ebebeb;
}

.vol-picture {
  width: 100%;
}

.vol-meta {
  padding: 10rpx 5rpx;
  font-size: 12px;
  color: #888;
}

.vol-author {
  float: right;
}

.vol-content {
  margin-top: 30rpx;
  padding: 0 5rpx;
  font-size: 14px;
  line-height: 1.4;
}

.vol-content-text {
  width: 100%;
  /* min-height: 200rpx; */
  font-size: 30px;
  display: inline-block;
}

.vol-makettime {
  font-size: 12px;
  color:  #888;
  text-align: right;  
}

.bottom {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  bottom: 5px;
  background-color: #F8F8F8;
  align-items: flex-end;
}

button::after {
  border: none
}

.main {
  position: absolute;
  top: 50%;
  left: 50%;
  width: 300px;
  height: 300px;
  transform: translate(-50%,-50%);
  -webkit-perspective: 1500;
  -moz-perspective: 1500;
}
 
.box {
  position: absolute;
  top: 0;
  left: 0;
  width: 300px;
  height: 300px;
  transition: all 1s;
  backface-visibility: hidden;
  border-radius: 10px;
  cursor: pointer;
}
.box image{
	border-radius: 10px;
  background:#888;
	width: 100%;
	height: 100%;
}
.b1{
  background:skyblue;
}
.b2 {
  background:tomato;
  transform: rotateY(-180deg);
}
